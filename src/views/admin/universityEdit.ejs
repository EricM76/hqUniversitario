<!DOCTYPE html>
<%- include('./partials/head',{ title : 'Editar universidad' }) %>

    <body class="universities bg-light">
        <%- include('./partials/header') %>
            <main class="container">
                <section class="row mt-2 mt-md-3 mt-lg-5">
                    <div class="col-12 col-md-10 col-lg-8 mx-auto">
                        <article class="card shadow">
                            <div class="card-header">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                      <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                      <li class="breadcrumb-item"><a href="/universities">Universidades</a></li>
                                      <li class="breadcrumb-item active" aria-current="page">Editar</li>
                                    </ol>
                                  </nav>
                                <hr>
                            </div>
                            <div class="card-body">
                                <form action="/universities/update/<%= id %>?_method=PUT" class="row g-2" enctype="multipart/form-data" method="POST">
                                    <div class="col-12 col-md-4 text-center">
                                        <img class="img-fluid" width="150px" src="/images/logos/<%= image %>"
                                            alt="vista previa">
                                    </div>
                                    <div class="col-12 col-md-8">
                                        <div class="mb-3">
                                            <label for="name" class="form-label">Nombre:</label>
                                            <input type="text" class="form-control" id="name" name="name" value="<%= name %>">
                                        </div>
                                        <div class="mb-3">
                                            <label for="acronym" class="form-label">Siglas:</label>
                                            <input type="text" class="form-control" id="acronym" name="acronym" value="<%= acronym %>">
                                        </div>
                                        <div class="d-flex justify-content-between mb-3">
                                            <div class="">
                                                <label for="formFile" class="btn btn-outline-dark"><%= image ? "Cambiar" : "Agregar" %>  
                                                    imagen</label>
                                                <input hidden class="form-control" type="file" id="formFile"
                                                    name="image" accept="image/*">
                                            </div>
                                        </div>
                                    </div>
                            </div>
                            <div class="card-footer text-end">
                                <a href="/universities/detail/<%= id %>" class="btn btn-outline-secondary">Cancelar</a>
                                <button class="btn btn-outline-dark" type="submit">Guardar</button>
                            </div>
                            </form>

                        </article>

                    </div>
                </section>

            </main>
            <%- include('./partials/scripts') %>
    </body>

    </html>