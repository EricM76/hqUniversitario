<!DOCTYPE html>
<%- include('./partials/head',{ title : 'Nueva carrera' }) %>

    <body class="careers bg-light">
        <%- include('./partials/header') %>
            <main class="container">
                <section class="row mt-2 mt-md-3 mt-lg-5">
                    <div class="col-12 col-md-10 col-lg-8 mx-auto">
                        <article class="card shadow">
                            <div class="card-header">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                      <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                      <li class="breadcrumb-item"><a href="/careers">Carreras</a></li>
                                      <li class="breadcrumb-item active" aria-current="page">Nueva carrera</li>
                                    </ol>
                                  </nav>
                                <hr>
                            </div>
                            <div class="card-body">
                                <form action="" class="needs-validation row g-2" method="POST" novalidate>
                                        <div class=" col-12 mb-3">
                                            <label for="area" class="form-label">Nombre:</label>
                                            <input type="text" class="form-control" id="area" name="name" required>
                                        </div>
                                        <div class=" col-12 col-md-6 mb-3">
                                            <label for="area" class="form-label">Universidad:</label>
                                            <select class="form-select" aria-label="Default select example" name="universityId" id="universityId" required>
                                                <option value="" selected hidden>Seleccione...</option>
                                                <% universities.forEach(university => { %>
                                                 <option value="<%= university.id %>"><%= university.name %></option>
                                                <% }) %> 
                                              </select>
                                        </div>
                                        <div class=" col-12 col-md-6 mb-3">
                                            <label for="area" class="form-label">Facultad:</label>
                                            <select class="form-select" aria-label="Default select example" name="facultyId" id="facultyId" required>
                                              </select>
                                        </div>
                                        <div class=" col-12 mb-3">
                                            <label for="description" class="form-label">Descripci√≥n:</label>
                                            <textarea name="description" style="resize: none;" class="form-control" id="description" rows="3"></textarea>
                                        </div>
                            </div>
                            <div class="card-footer text-end">
                                <a href="/careers" class="btn btn-outline-secondary">Cancelar</a>
                                <button class="btn btn-outline-dark" type="submit">Guardar</button>
                            </div>
                            </form>
                        </article>
                    </div>
                </section>
            </main>
            <%- include('./partials/scripts') %>
            <script src="/javascripts/career.js"></script>
    </body>

    </html>