<!DOCTYPE html>
<%- include('./partials/head',{
    title : 'Materias'
}) %> 
<body class="materias bg-secondary">
    <%- include('./partials/header') %> 
    
        <section class="row mt-2 mt-md-3 mt-lg-5">
            <div class="col-12 col-md-10 col-lg-8 mx-auto">
             
                <article class="card shadow">
                    <div class="card-header">
                      <div class="row g-2">
                        <div class="col-12 d-flex justify-content-between">
                            <nav aria-label="breadcrumb">
                              <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Materias</li>
                              </ol>
                            </nav>
                            <div class="d-flex justify-content-end">
                              <a href="/courses/add" class="btn btn-outline-dark">Agregar</a>
                          </div>
                        </div>
                        <hr>
                        <div class="col-12 col-md-6 col-lg-4">
                            <select class="form-select">
                                <option selected hidden>Ordenar por</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                              </select>
                        </div>
                        <div class="col-12 col-md-6 col-lg-4">
                            <select class="form-select">
                                <option selected hidden>Filtar por</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                              </select>
                        </div>
                        <div class="col-12 col-md-12 col-lg-4">
                          <form class="d-flex position-relative" role="search">
                            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn bg-transparent border-start-1 position-absolute top-0 end-0" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
                          </form>
                        </div>
                    </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                  <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Materia</th>
                                    <th scope="col">Videos</th>
                                    <th scope="col">Facultad</th>
                                    <th scope="col">Universidad</th>
                                    <th scope="col">Acciones</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% courses.forEach(({id,name,faculty,university,videos}) => { %>
                                    <tr>
                                      <th class="align-middle" scope="row"><%= id %></th>
                                      <td class="align-middle"><%= name %></td>
                                      <td class="align-middle"><%= videos.length %></td>
                                      <td class="align-middle"><%= faculty.acronym %></td>
                                      <td class="align-middle"><%= university.acronym %></td>
                                      <td class="align-middle">
                                        <div class="d-flex align-items-center gap-2">
                                          <a href="/courses/detail/<%= id %>" class="btn btn-sm btn-outline-primary">+info</a>
                                          <a href="/courses/edit/<%= id %>" class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#loader<%= id %>">editar</a>
                                        </div>
                                      </td>
                                    </tr>
                                    <main class="container">
                                    <%- include('modals/loader',{
                                      id : id,
                                      target : `/courses/edit/${id}`
                                    }) %> 
                                  <% }) %>
                                </tbody>
                              </table>
                        </div>
                    </div>
                    <div class="card-footer">
                   
                    </div>
                </article>
               
            </div>
        </section>

    </main>
    <%- include('./partials/scripts') %> 
</body>
</html>