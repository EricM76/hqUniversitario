<div class="modal fade" id="modalShowVideo<%= video.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Reproduciendo <strong><%= video.title %></strong></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <video  controls class="w-100" controlslist="nodownload">
            <source id="resourceShowPreview<%= video.id %>" src=""
            type="video/mp4">
          </video>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.getElementById('resourceShowPreview<%= video.id %>').volume = 0.5;
    
    document.getElementById('modalShowVideo<%= video.id %>').addEventListener('show.bs.modal', async () => {
      try {
       let response = await fetch('/courses/get-data-video?videoId=<%= video.id %>');
       let result = await response.json();
       console.log(result)
       if(result.ok){
        document.getElementById(`resourceShowPreview${result.video.id}`).src = result.urlCloudfont + result.video.resource
       }
      } catch (error) {
        console.error(error) 
      }
    });

    document.getElementById('modalShowVideo<%= video.id %>').addEventListener('hidden.bs.modal', e => {
        document.getElementById('resourceShowPreview<%= video.id %>').pause()
    });

  </script>