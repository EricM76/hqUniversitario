<!DOCTYPE html>
<%- include('./partials/head',{ title : 'Materia' }) %>

    <body class="courses bg-light">
        <%- include('./partials/header') %>
            <main class="container">
                <section class="row mt-2 mt-md-3 mt-lg-5">
                    <div class="col-12 mx-auto">
                        <article class="card shadow">
                            <div class="card-header">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                        <li class="breadcrumb-item"><a href="/courses">Materias</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Materia</li>
                                    </ol>
                                </nav>
                                <hr>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between flex-wrap gap-3">
                                    <img class="courses__banner--preview" src="/images/exampleBanner.jpeg" alt="">
                                    <div class="courses__info--preview">
                                        <h1>QUIMICA - CBC UBA</h1>
                                        <ul class="text-muted">
                                            <li>20 <a href="#videos">videos</a> </li>
                                            <li>6 <a href="#material">apuntes</a></li>
                                            <li>2 <a href="#examen">evaluaciones</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <hr>
                                <h3 id="videos" class="text-center my-4">Contenido de la materia</h3>

                                <section class="d-flex flex-wrap justify-content-between gap-3">

                                    <% for( let i = 0; i < 24; i++ ) { %>
                                        <article class="card courses__card">
                                            <div class="card-header">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h5 class="card-title">Video title</h5>
                                                    <i class="fas fa-unlock"></i>
                                                </div>
                                            </div>
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <ul class="text-muted">
                                                        <li>1 video</li>
                                                        <li>1 archivo adjunto</li>
                                                    </ul>
                                                    <button class="btn btn-sm btn-outline-dark">VER VIDEO</button>
                                                </div>
                                              
                                            </div>
                                              
                                          </article>
                                    <% } %>
                                </section>
                                <section id="material">
                                    <h3 class="text-center my-3">Material adjunto</h3>
                                    <div class="d-flex flex-wrap justify-content-between gap-3">
                                        <% for( let i = 0; i < 8; i++ ) { %>
                                            <article class="card material__card">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <h5><span class="text-danger me-1"><i class="fas fa-file-pdf"></i></span> Apunte</h5>
                                                        <a class="btn btn-sm btn-outline-dark">DESCARGAR</a>
                                                    </div>
                                                </div>
                                              </article>
                                        <% } %>
                                    </div>
                                </section>
                                <section id="examen">
                                    <h3 class="text-center my-3">Simulacro de exámen</h3>
                                    <div class="d-flex flex-wrap justify-content-between gap-3">
                                        <% for( let i = 0; i < 3; i++ ) { %>
                                            <article class="card material__card">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <h5><span class="text-primary me-1"><i class="fas fa-book"></i></span>  Exámen</h5>
                                                        <a class="btn btn-sm btn-outline-dark">ACCEDER</a>
                                                        
                                                    </div>
                                                </div>
                                              </article>
                                        <% } %>
                                    </div>
                                </section>
                        </article>
                    </div>
                </section>

            </main>
            <%- include('./partials/scripts') %>
    </body>

    </html>