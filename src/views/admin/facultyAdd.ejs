<!DOCTYPE html>
<%- include('./partials/head',{ title : 'Nueva Facultad' }) %>

    <body class="faculties bg-light">
        <%- include('./partials/header') %>
            <main class="container">
                <section class="row mt-2 mt-md-3 mt-lg-5">
                    <div class="col-12 col-md-10 col-lg-8 mx-auto">
                        <article class="card shadow">
                            <div class="card-header">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                      <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                      <li class="breadcrumb-item"><a href="/faculties">Facultades</a></li>
                                      <li class="breadcrumb-item active" aria-current="page">Nueva facultad</li>
                                    </ol>
                                  </nav>
                                <hr>
                            </div>
                            <div class="card-body">
                                <form action="" class="row g-2 needs-validation" enctype="multipart/form-data" method="POST" novalidate>
                                    <div class="col-12 col-md-4 text-center">
                                        <img class="img-fluid" id="imgPrev" width="150px" src="/images/noImage.png"
                                            alt="vista previa">
                                            <div class="d-flex justify-content-center my-3">
                                                <div class="">
                                                    <label for="formFile" class="btn btn-outline-dark" id="btn-formFile">Agregar
                                                        imagen</label>
                                                    <input hidden class="form-control" type="file" id="formFile"
                                                        name="image">
                                                </div>
                                            </div>
                                    </div>
                                    <div class="col-12 col-md-8">
                                        <div class="mb-3">
                                            <label for="name" class="form-label">Nombre:</label>
                                            <input type="text" class="form-control" id="name" name="name" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="acronym" class="form-label">Siglas:</label>
                                            <input type="text" class="form-control" id="acronym" name="acronym" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="universityId" class="form-label">Universidad:</label>
                                            <select name="universityId" id="universityId" class="form-control" required>
                                                <option value="" selected hidden>Seleccione...</option>
                                                <% universities.forEach(university => { %>
                                                 <option value="<%= university.id %>"><%= university.name %></option>
                                                <% }) %>
                                            </select>
                                        </div>
                                    </div>
                            </div>
                            <div class="card-footer text-end">
                                <a href="/faculties" class="btn btn-outline-secondary">Cancelar</a>
                                <button class="btn btn-outline-dark" type="submit">Guardar</button>
                            </div>
                            </form>

                        </article>

                    </div>
                </section>

            </main>
            <%- include('./partials/scripts') %>
    </body>

    </html>