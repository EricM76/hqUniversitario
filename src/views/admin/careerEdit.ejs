<!DOCTYPE html>
<%- include('./partials/head',{ title : 'Editar carrera' }) %>

    <body class="careers bg-light">
        <%- include('./partials/header') %>
            <main class="container">
                <section class="row mt-2 mt-md-3 mt-lg-5">
                    <div class="col-12 col-md-10 col-lg-8 mx-auto">
                        <article class="card shadow">
                            <div class="card-header">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                      <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                                      <li class="breadcrumb-item"><a href="/careers">Carreras</a></li>
                                      <li class="breadcrumb-item active" aria-current="page">Editar carrera</li>
                                    </ol>
                                  </nav>
                                <hr>
                            </div>
                            <div class="card-body">
                                <form action="/careers/update/<%= id %>?_method=PUT" class="row g-2" method="POST">
                                        <div class=" col-12 mb-3">
                                            <label for="area" class="form-label">Nombre:</label>
                                            <input type="text" class="form-control" id="area" name="name" value="<%= name %>">
                                        </div>
                                        <div class=" col-12 col-md-6 mb-3">
                                            <label for="universityId" class="form-label">Universidad:</label>
                                            <select class="form-select" name="universityId" id="universityId">
                                                <% universities.forEach(u => { %>
                                                    <option value="<%= u.id %>" <%= u.id === university.id  && 'selected'%>><%= u.name %></option>
                                                <% }) %>
                                              </select>
                                        </div>
                                        <div class=" col-12 col-md-6 mb-3">
                                            <label for="facultyId" class="form-label">Facultad:</label>
                                            <select class="form-select" aria-label="Default select example" id="facultyId" name="facultyId">
                                                <% faculties.forEach(f => { %>
                                                    <option value="<%= f.id %>" <%= f.id === faculty.id  && 'selected'%>><%= f.name %></option>
                                                <% }) %>
                                              </select>
                                        </div>
                                        <div class=" col-12 mb-3">
                                            <label for="description" class="form-label">Descripci√≥n:</label>
                                            <textarea name="description" style="resize: none;" class="form-control" id="description" rows="3"><%= description %></textarea>
                                        </div>
                            </div>
                            <div class="card-footer text-end">
                                <button class="btn btn-outline-dark" type="submit">Guardar</button>
                            </div>
                            </form>

                        </article>

                    </div>
                </section>

            </main>
            <%- include('./partials/scripts') %>
            <script src="/javascripts/abm.js"></script>
    </body>

    </html>