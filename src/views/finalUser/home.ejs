        <div class="row" data-aos="fade-up" data-aos-duration="1500" style="height: 80vh;">
          <!-- Card Universidad -->
          <% universities.forEach(university => { %>
            <div class="col-12 col-md-4 p-3 mt-5">
              <div class="card border border-0  p-2 bg-transparent">
                <div class="home__universities--cardImageContainer">
                  <img src="images/logos/<%- university.image %> " alt="unc_logo">
                </div>
                <div class="card-body">
                  <h5 class="card-title home__universities--title"><%- university.name %></h5>
                </div>
                <ul class="list-group list-group-flush fs-5 px-4">
                  <li class="list-group-item bg-transparent text-white d-flex justify-content-between" >
                    <span><i class="fa-solid fa-building-columns me-3"></i>Facultades:</span>
                    <span>
                      <%= university.faculties.length %> %>
                    </span>

                  </li>
                  <li class="list-group-item bg-transparent text-white  d-flex justify-content-between">
                    <span><i class="fa-solid fa-graduation-cap me-3"></i>Carreras:</span>
                    <span><%= university.careers.length %></span>

                  <li class="list-group-item bg-transparent text-white d-flex justify-content-between">
                    <span><i class="fa-solid fa-book me-3"></i>Materias:</span>
                    <span><%= university.courses.length %></span>
                </ul>
                <div class="card-body">
                  <a href="/universidad/<%- university.id %>/facultades">
                    <div class="btn btn-outline-light w-100 py-3">
                        <span>Ver más</span>
                    </div>
                </a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
