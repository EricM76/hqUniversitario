<div class="slide-container swiper">
    <div class="slide-content">
      <div class="card-wrapper swiper-wrapper">
        <% sliderArray.forEach(element => { %>
          <div class="slider__cardWrapper swiper-slide">
            <div class="card border border-0 shadow">
              <div class="slider__cardImageWrapper">
                  <img src="/images/<%- element.image %>" class="card-img-top" alt="Imagen <%- element.image %>">
              </div>
              <div class="card-body">
                <h5 class="card-title"><%- element.name %> </h5>
                <p class="card-text"><%- element.description ? element.description : "Una breve descripciÃ³n" %> </p>
                <div class="card-body">
                  <a href="/materia/presentacion/<%- element.id %>">
                    <div class="button__dark">
                        <span>Ver materia</span>
                    </div>
                  </a>
                </div>
              </div>
            </div>
          </div>  
        <% }) %>
      </div>
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
</div>
