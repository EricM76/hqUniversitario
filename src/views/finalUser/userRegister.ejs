<!DOCTYPE html>
  <%- include('./partials/head', {
    title : 'Registro'
  }) %> 

<body class="register">
  <%- include('./partials/header') %> 
  <main class="container register__mainContainer">
    <div class="container shadow rounded p-5 register__formContainer">
      <div class="register__logoContainer">
        <img src="/images/logos/LOGO HQ.png" alt="Logo HQ" class="w-100">
      </div>
      <h2 class="text-center">Registro</h2>
      <form action="/usuario/registro" method="POST" class="row">
        <div class="col-12">
          <label for="name" class="form-label">Nombre*</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= locals.old && old.name %>">
          <small class="feedback text-danger"></small>
          <% if (locals.errors && errors.name) { %>
            <small class="text-danger"><%= errors.name.msg %></small>
          <% } %>
        </div>
        <div class="col-12">
          <label for="surname" class="form-label">Apellido*</label>
          <input type="text" class="form-control" name="surname" id="surname" value="<%= locals.old && old.surname %>">
          <small class="feedback text-danger"></small>
          <% if (locals.errors && errors.surname) { %>
            <small class="text-danger"><%= errors.surname.msg %></small>
          <% } %>
        </div>
        <div class="col-12">
          <label for="email" class="form-label">Email*</label>
          <input type="email" class="form-control" name="email" id="email" value="<%= locals.old && old.email %>">
          <small class="feedback text-danger"></small>
          <% if (locals.errors && errors.email) { %>
            <small class="text-danger"><%= errors.email.msg %></small>
          <% } %>
        </div>
        <div class="col-12">
          <label for="password" class="form-label">Contraseña*</label>
          <input type="password" class="form-control" name="password" id="password">
          <small class="feedback text-danger"></small>
          <% if (locals.errors && errors.password) { %>
            <small class="text-danger"><%= errors.password.msg %></small>
          <% } %>
        </div>
        <div class="col-12 mb-3">
          <label for="password2" class="form-label">Reingresa tu contraseña*</label>
          <input type="password" class="form-control" name="password2" id="password2">
          <small class="feedback text-danger"></small>
          <% if (locals.errors && errors.password2) { %>
            <small class="text-danger"><%= errors.password2.msg %></small>
          <% } %>
        </div>
        <div class="col-12 mb-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="terms" id="check">
            <label class="form-check-label" for="check">
              Acepto los términos y condiciones
            </label>
            <div>
              <small class="feedback text-danger"></small>
              <% if (locals.errors && errors.terms) { %>
                <small class="text-danger"><%= errors.terms.msg %></small>
              <% } %>
            </div>
          </div>
        </div>
        <div class="col-12 mb-3 register__buttonContainer">
          <button class="button__dark" type="submit">Registrarme</button>
        </div>
        <div class="googleSigninButton" id="gSignInWrapper">
          <div id="customBtn" class="customGPlusSignIn">
            <span class="icon"></span>
            <span class="buttonText">Registrate con Google</span>
          </div>
        </div>
      </form>
      <p class="text-center mt-4">
        <a href="/usuario/login">Ya tengo cuenta</a>
      </p>
    </div>
  </main>
  <%- include('./partials/footer') %> 
  <%- include('./partials/scripts') %> 
</body>
</html>
