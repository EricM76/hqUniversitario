<!DOCTYPE html>
  <%- include('./partials/head', {
    title : 'Registro'
  }) %> 

<body class="register">
  <%- include('./partials/header') %> 
  <main class="container register__mainContainer">
    <div class="container shadow rounded p-5 register__formContainer">
      <div class="register__logoContainer">
        <img src="/images/logos/LOGO HQ.png" alt="Logo HQ" class="w-100">
      </div>
      <h2 class="text-center">Registro</h2>
      <form method="" action="" class="row">
        <div class="col-12">
          <label for="name" class="form-label">Nombre*</label>
          <input type="text" class="form-control" name="name" id="name" value="">
          <div class="feedback"></div>
        </div>
        <div class="col-12">
          <label for="surname" class="form-label">Apellido*</label>
          <input type="text" class="form-control" name="surname" id="surname" value="">
          <div class="feedback"></div>
        </div>
        <div class="col-12">
          <label for="email" class="form-label">Email*</label>
          <input type="email" class="form-control" name="email" id="email" value="">
          <div class="feedback"></div>
        </div>
        <div class="col-12">
          <label for="password" class="form-label">Contraseña*</label>
          <input type="password" class="form-control" name="password" id="password" value="">
          <div class="feedback"></div>
        </div>
        <div class="col-12 mb-3">
          <label for="password2" class="form-label">Reingresa tu contraseña*</label>
          <input type="password2" class="form-control" name="password2" id="password2" value="">
          <div class="feedback"></div>
        </div>
        <div class="col-12 mb-3">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="terms" value="" id="check">
            <label class="form-check-label" for="check">
              Acepto los términos y condiciones
            </label>
            <div class="feedback"></div>
          </div>
        </div>
        <div class="col-12 mb-3 register__buttonContainer">
          <button class="button__dark" type="submit">Registrarme</button>
        </div>
        <div class="googleSigninButton" id="gSignInWrapper">
          <div id="customBtn" class="customGPlusSignIn">
            <span class="icon"></span>
            <span class="buttonText">Registrate con Google</span>
          </div>
        </div>
      </form>
      <p class="text-center mt-4">
        <a href="/usuarios/login">Ya tengo cuenta</a>
      </p>
    </div>
  </main>
  <%- include('./partials/footer') %> 
  <%- include('./partials/scripts') %> 
</body>
</html>
